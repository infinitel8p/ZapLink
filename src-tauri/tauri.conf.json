{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "ZapLink",
    "version": "0.1.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/zaplink.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "globalShortcut": {
        "all": true
      },
      "clipboard": {
        "all": false,
        "readText": true,
        "writeText": false
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "ZapLink",
        "width": 250,
        "height": 150,
        "fullscreen": false,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "visible": false,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.InfiniteL8p.app",
      "icon": [
        "icons/icon.ico",
        "icons/zaplink.png"
      ]
    }
  }
}